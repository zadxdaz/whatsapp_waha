<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cron to check WAHA connection status -->
    <record id="ir_cron_waha_check_status" model="ir.cron">
        <field name="name">WAHA: Check Connection Status</field>
        <field name="model_id" ref="model_waha_account"/>
        <field name="state">code</field>
        <field name="code">model._cron_check_connection_status()</field>
        <field name="interval_number">15</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True"/>
    </record>
</odoo>
