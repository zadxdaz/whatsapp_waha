<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- WAHA Account Form View -->
    <record id="view_waha_account_form" model="ir.ui.view">
        <field name="name">waha.account.form</field>
        <field name="model">waha.account</field>
        <field name="arch" type="xml">
            <form string="WAHA Account">
                <header>
                    <button name="action_connect" string="Connect" type="object" 
                            class="oe_highlight"
                            invisible="status != 'disconnected'"/>
                    <button name="action_get_qr" string="Get QR Code" type="object"
                            class="oe_highlight"
                            invisible="status not in ['connecting', 'connected']"/>
                    <button name="action_refresh_status" string="Refresh Status" type="object"/>
                    <button name="action_disconnect" string="Disconnect" type="object"
                            invisible="status not in ['connected', 'connecting']"/>
                    <field name="status" widget="statusbar"
                           statusbar_visible="disconnected,connecting,connected"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_templates" type="object"
                                class="oe_stat_button" icon="fa-commenting">
                            <field name="templates_count" widget="statbutton" string="Templates"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <label for="name" string="Account Name"/>
                        <h1>
                            <field name="name" placeholder="e.g., Main WhatsApp Account"/>
                        </h1>
                    </div>
                    
                    <!-- QR Code Display -->
                    <div invisible="not qr_code" class="mt-3 mb-3">
                        <div class="text-center">
                            <field name="qr_code" widget="image" class="mb-3" options="{'size': [300, 300]}"/>
                            <div class="alert alert-info">
                                <strong>Scan this QR code with WhatsApp</strong><br/>
                                Open WhatsApp &gt; Settings &gt; Linked Devices &gt; Link a Device
                            </div>
                        </div>
                    </div>

                    <group>
                        <group string="General Information">
                            <field name="active" widget="boolean_toggle"/>
                            <field name="phone_uid" readonly="1" placeholder="Will be filled after connection"/>
                        </group>
                        <group string="WAHA Server Configuration">
                            <field name="waha_url" placeholder="http://localhost:3000"/>
                            <field name="session_name" placeholder="default"/>
                            <field name="api_key" password="True" groups="waha.group_waha_admin" placeholder="Optional API Key"/>
                        </group>
                    </group>

                    <group>
                        <group string="Webhook Configuration">
                            <field name="callback_url" readonly="1" widget="url"/>
                            <field name="webhook_verify_token" password="True" 
                                   groups="waha.group_waha_admin"/>
                        </group>
                        <group string="Notifications">
                            <field name="notify_user_ids" widget="many2many_tags" 
                                   placeholder="Select users to notify"/>
                            <field name="allowed_company_ids" widget="many2many_tags"
                                   groups="base.group_multi_company"/>
                        </group>
                    </group>
                </sheet>
               <chatter/>
            </form>
        </field>
    </record>

    <!-- WAHA Account Tree View -->
    <record id="view_waha_account_tree" model="ir.ui.view">
        <field name="name">waha.account.tree</field>
        <field name="model">waha.account</field>
        <field name="arch" type="xml">
            <list string="WAHA Accounts" create="1" edit="1" delete="1">
                <field name="name" string="Account Name"/>
                <field name="session_name" string="Session"/>
                <field name="waha_url" string="WAHA Server"/>
                <field name="phone_uid" string="Phone Number" optional="show"/>
                <field name="status" 
                       decoration-success="status=='connected'"
                       decoration-info="status=='connecting'"
                       decoration-danger="status in ['error', 'disconnected']"
                       decoration-warning="status=='stopped'"
                       widget="badge"/>
                <field name="templates_count" string="Templates"/>
                <field name="active" widget="boolean_toggle" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- WAHA Account Kanban View -->
    <record id="view_waha_account_kanban" model="ir.ui.view">
        <field name="name">waha.account.kanban</field>
        <field name="model">waha.account</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="session_name"/>
                <field name="phone_uid"/>
                <field name="status"/>
                <field name="templates_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="session_name"/>
                                    </div>
                                </div>
                                <span class="float-end">
                                    <field name="status" widget="badge" 
                                           decoration-success="status=='connected'"
                                           decoration-info="status=='connecting'"
                                           decoration-danger="status in ['error', 'disconnected']"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <i class="fa fa-phone"/> <field name="phone_uid"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <i class="fa fa-commenting"/> <field name="templates_count"/> templates
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- WAHA Account Search View -->
    <record id="view_waha_account_search" model="ir.ui.view">
        <field name="name">waha.account.search</field>
        <field name="model">waha.account</field>
        <field name="arch" type="xml">
            <search string="Search WAHA Accounts">
                <field name="name" string="Account" filter_domain="['|', ('name', 'ilike', self), ('session_name', 'ilike', self)]"/>
                <field name="session_name"/>
                <field name="phone_uid"/>
                <separator/>
                <filter string="Connected" name="connected" domain="[('status', '=', 'connected')]"/>
                <filter string="Disconnected" name="disconnected" domain="[('status', '=', 'disconnected')]"/>
                <filter string="Error" name="error" domain="[('status', '=', 'error')]"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- WAHA Account Action -->
    <record id="action_waha_account" model="ir.actions.act_window">
        <field name="name">WhatsApp Accounts</field>
        <field name="res_model">waha.account</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_waha_account_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first WAHA Account
            </p>
            <p>
                Connect your WhatsApp number using WAHA (WhatsApp HTTP API).<br/>
                Make sure you have WAHA server running before connecting.
            </p>
        </field>
    </record>
</odoo>
