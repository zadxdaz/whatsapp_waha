<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- WAHA Message Form View -->
    <record id="view_waha_message_form" model="ir.ui.view">
        <field name="name">waha.message.form</field>
        <field name="model">waha.message</field>
        <field name="arch" type="xml">
            <form string="WhatsApp Message">
                <header>
                    <button name="action_retry_send" string="Retry Send" type="object"
                            class="oe_highlight"
                            invisible="state not in ['error', 'bounced']"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <!-- Account & Contact Information -->
                    <group string="Account &amp; Contact">
                        <group>
                            <field name="wa_account_id"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="waha_chat_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="message_type" widget="badge"/>
                            <field name="content_type" widget="badge"/>
                            <field name="participant_id" readonly="1"/>
                        </group>
                    </group>

                    <!-- Message Content -->
                    <group string="Message Content">
                        <field name="body" nolabel="1" widget="html"/>
                    </group>

                    <!-- Message Details -->
                    <group string="Message Details">
                        <group>
                            <field name="msg_uid" readonly="1"/>
                            <field name="reply_to_message_id"/>
                            <field name="reply_to_msg_uid"/>
                        </group>
                        <group>
                            <field name="mail_message_id" readonly="1"/>
                            <field name="wa_timestamp" readonly="1"/>
                            <field name="create_date" readonly="1"/>
                        </group>
                    </group>

                    <!-- Failure Information -->
                    <group string="Failure Information" invisible="state != 'error'">
                        <group>
                            <field name="failure_type"/>
                            <field name="failure_reason"/>
                        </group>
                    </group>

                    <!-- Attachments -->
                    <group string="Attachments" invisible="not attachment_ids">
                        <field name="attachment_ids" nolabel="1"/>
                    </group>

                    <!-- Technical Information -->
                    <notebook>
                        <page string="Technical Info" groups="base.group_no_one">
                            <group>
                                <group>
                                    <field name="raw_chat_id"/>
                                    <field name="raw_sender_phone"/>
                                </group>
                                <group>
                                    <field name="sent_date" readonly="1"/>
                                    <field name="delivered_date" readonly="1"/>
                                    <field name="read_date" readonly="1"/>
                                </group>
                            </group>
                            <group string="Raw Payload">
                                <field name="raw_payload" nolabel="1" widget="ace" options="{'mode': 'json'}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- WAHA Message Tree View -->
    <record id="view_waha_message_tree" model="ir.ui.view">
        <field name="name">waha.message.tree</field>
        <field name="model">waha.message</field>
        <field name="arch" type="xml">
            <list string="WhatsApp Messages" decoration-info="message_type=='inbound'" decoration-warning="message_type=='outbound'">
                <field name="wa_timestamp"/>
                <field name="wa_account_id"/>
                <field name="partner_id"/>
                <field name="waha_chat_id" optional="hide"/>
                <field name="message_type" widget="badge"/>
                <field name="content_type" widget="badge" optional="hide"/>
                <field name="body"/>
                <field name="state" 
                       decoration-success="state=='sent'"
                       decoration-info="state=='delivered'"
                       decoration-warning="state=='read'"
                       decoration-danger="state=='error'"
                       widget="badge"/>
                <field name="msg_uid" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- WAHA Message Search View -->
    <record id="view_waha_message_search" model="ir.ui.view">
        <field name="name">waha.message.search</field>
        <field name="model">waha.message</field>
        <field name="arch" type="xml">
            <search string="WhatsApp Messages">
                <field name="partner_id"/>
                <field name="body" filter_domain="[('body', 'ilike', self)]"/>
                <field name="wa_account_id"/>
                <field name="waha_chat_id"/>
                <field name="msg_uid"/>
                <separator/>
                <filter string="Outbound" name="outbound" domain="[('message_type', '=', 'outbound')]"/>
                <filter string="Inbound" name="inbound" domain="[('message_type', '=', 'inbound')]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Pending" name="pending" domain="[('state', '=', 'outgoing')]"/>
                <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]"/>
                <filter string="Delivered" name="delivered" domain="[('state', '=', 'delivered')]"/>
                <filter string="Read" name="read" domain="[('state', '=', 'read')]"/>
                <filter string="Received" name="received" domain="[('state', '=', 'received')]"/>
                <filter string="Failed" name="failed" domain="[('state', '=', 'error')]"/>
                <separator/>
                <filter string="Today" name="today" domain="[('wa_timestamp', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00')), ('wa_timestamp', '&lt;=', context_today().strftime('%Y-%m-%d 23:59:59'))]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Account" name="group_account" context="{'group_by': 'wa_account_id'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'message_type'}"/>
                    <filter string="Content Type" name="group_content" context="{'group_by': 'content_type'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Contact" name="group_contact" context="{'group_by': 'partner_id'}"/>
                    <filter string="Chat" name="group_chat" context="{'group_by': 'waha_chat_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'wa_timestamp'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- WAHA Message Action -->
    <record id="action_waha_message" model="ir.actions.act_window">
        <field name="name">WhatsApp Messages</field>
        <field name="res_model">waha.message</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_outbound': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No messages yet
            </p>
            <p>
                Send your first WhatsApp message using templates or the composer.
            </p>
        </field>
    </record>
</odoo>
