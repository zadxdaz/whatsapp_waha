<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_waha_chat_tree" model="ir.ui.view">
        <field name="name">waha.chat.tree</field>
        <field name="model">waha.chat</field>
        <field name="arch" type="xml">
            <list string="WhatsApp Chats">
                <field name="name"/>
                <field name="chat_type"/>
                <field name="partner_id"/>
                <field name="wa_account_id"/>
                <field name="last_message_time"/>
                <field name="message_count"/>
                <field name="unread_count" string="Unread"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_waha_chat_form" model="ir.ui.view">
        <field name="name">waha.chat.form</field>
        <field name="model">waha.chat</field>
        <field name="arch" type="xml">
            <form string="WhatsApp Chat">
                <header>
                    <button name="sync_group_info_from_waha" 
                            string="Sync from WhatsApp" 
                            type="object"
                            invisible="chat_type != 'group'"/>
                    <button name="action_update_channel_name" 
                            string="Update Channel Name" 
                            type="object"
                            class="btn-primary"/>
                    <button name="mark_as_read" 
                            string="Mark as Read" 
                            type="object"
                            invisible="unread_count == 0"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_waha_message)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-comments"
                                context="{'search_default_waha_chat_id': id}">
                            <field name="message_count" widget="statinfo" string="Messages"/>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Group" bg_color="bg-info" 
                            invisible="chat_type != 'group'"/>
                    
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="chat_type"/>
                            <field name="wa_chat_id"/>
                            <field name="wa_account_id"/>
                        </group>
                        <group>
                            <field name="partner_id" invisible="chat_type == 'group'"/>
                            <field name="discuss_channel_id"/>
                            <field name="last_message_time"/>
                            <field name="unread_count"/>
                        </group>
                    </group>
                    
                    <notebook invisible="chat_type != 'group'">
                        <page string="Participants" name="participants">
                            <field name="group_participants" widget="many2many_tags"/>
                        </page>
                        <page string="Group Info" name="group_info">
                            <group>
                                <field name="group_description"/>
                                <field name="group_avatar_url"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_waha_chat_search" model="ir.ui.view">
        <field name="name">waha.chat.search</field>
        <field name="model">waha.chat</field>
        <field name="arch" type="xml">
            <search string="Search Chats">
                <field name="name"/>
                <field name="wa_chat_id"/>
                <field name="partner_id"/>
                <field name="wa_account_id"/>
                
                <filter string="Individual Chats" name="individual" domain="[('chat_type', '=', 'individual')]"/>
                <filter string="Group Chats" name="groups" domain="[('chat_type', '=', 'group')]"/>
                <separator/>
                <filter string="With Unread" name="unread" domain="[('unread_count', '>', 0)]"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Chat Type" name="group_by_type" context="{'group_by': 'chat_type'}"/>
                    <filter string="Account" name="group_by_account" context="{'group_by': 'wa_account_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_waha_chat" model="ir.actions.act_window">
        <field name="name">WhatsApp Chats</field>
        <field name="res_model">waha.chat</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first WhatsApp chat
            </p>
            <p>
                Chats will be automatically created when you send or receive messages.
            </p>
        </field>
    </record>
</odoo>
