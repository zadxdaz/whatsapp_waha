<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_waha_partner_tree" model="ir.ui.view">
        <field name="name">waha.partner.tree</field>
        <field name="model">waha.partner</field>
        <field name="arch" type="xml">
            <list string="WhatsApp Contacts">
                <field name="display_name"/>
                <field name="phone_number"/>
                <field name="wa_name"/>
                <field name="is_business" widget="boolean"/>
                <field name="wa_account_id"/>
                <field name="is_contact_synced" widget="boolean"/>
                <field name="last_sync_date"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_waha_partner_form" model="ir.ui.view">
        <field name="name">waha.partner.form</field>
        <field name="model">waha.partner</field>
        <field name="arch" type="xml">
            <form string="WhatsApp Contact">
                <header>
                    <button name="refresh_contact_info" 
                            string="Refresh from WhatsApp" 
                            type="object"
                            class="btn-primary"/>
                    <button name="action_view_partner" 
                            string="View Partner" 
                            type="object"
                            class="btn-secondary"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Business" bg_color="bg-success" 
                            attrs="{'invisible': [('is_business', '=', False)]}"/>
                    
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="display_name"/>
                            <field name="phone_number"/>
                            <field name="wa_contact_id"/>
                            <field name="wa_account_id"/>
                        </group>
                        <group>
                            <field name="wa_name"/>
                            <field name="wa_pushname"/>
                            <field name="is_business"/>
                            <field name="is_contact_synced"/>
                            <field name="last_sync_date"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="WhatsApp Info" name="wa_info">
                            <group>
                                <field name="wa_status"/>
                                <field name="last_seen"/>
                                <field name="is_blocked"/>
                            </group>
                        </page>
                        <page string="Business Info" name="business_info" 
                              attrs="{'invisible': [('is_business', '=', False)]}">
                            <group>
                                <field name="business_description"/>
                                <field name="business_category"/>
                                <field name="business_website" widget="url"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_waha_partner_search" model="ir.ui.view">
        <field name="name">waha.partner.search</field>
        <field name="model">waha.partner</field>
        <field name="arch" type="xml">
            <search string="Search WhatsApp Contacts">
                <field name="display_name"/>
                <field name="phone_number"/>
                <field name="wa_name"/>
                <field name="partner_id"/>
                <field name="wa_account_id"/>
                
                <filter string="Business Accounts" name="business" domain="[('is_business', '=', True)]"/>
                <filter string="Synced" name="synced" domain="[('is_contact_synced', '=', True)]"/>
                <filter string="Not Synced" name="not_synced" domain="[('is_contact_synced', '=', False)]"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Account" name="group_by_account" context="{'group_by': 'wa_account_id'}"/>
                    <filter string="Business" name="group_by_business" context="{'group_by': 'is_business'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_waha_partner" model="ir.actions.act_window">
        <field name="name">WhatsApp Contacts</field>
        <field name="res_model">waha.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No WhatsApp contacts yet
            </p>
            <p>
                Contacts will be automatically created when you send or receive messages.
            </p>
        </field>
    </record>
</odoo>
